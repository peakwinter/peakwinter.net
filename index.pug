extends _includes/layouts/base.pug

block pageHead
  link(rel="stylesheet", href="~/assets/styles/home.scss")
  meta(property="og:title" content=metadata.title)
  meta(name="author" content=metadata.title)
  meta(property="og:locale" content="en_US")
  meta(name="description" content=metadata.description)
  meta(property="og:description" content=metadata.description)
  link(rel="canonical" href=`${metadata.url}${page.url}`)
  meta(property="og:url" content=`${metadata.url}${page.url}`)
  meta(property="og:site_name" content=metadata.title)
  meta(property="og:image" content=`${metadata.url}/assets/images/home-silhouette.jpg`)
  meta(name="twitter:card" content="summary_large_image")
  meta(property="og:type" content="website")
  meta(name="twitter:site" content="@peakwinter")
  meta(name="twitter:creator" content="@peakwinter")
  script(type="application/ld+json").
    {"@context":"http://schema.org","@type":"WebPage","headline":"#{metadata.title}","author":{"@type":"Person","name":"#{metadata.author.name}","image":"#{metadata.url}/assets/images/home-silhouette.jpg","description":"#{description}","publisher":{"@type":"Organization","logo":{"@type":"ImageObject","url":"#{metadata.url}/assets/icons/apple-touch-icon.png"},"name":"#{metadata.author.name}"},"url":"#{metadata.url}#{page.url}"}}
  title Jacob Cook

block pageBody
  .jc-page-home
    .section.section__masthead
      .section-content
        .container
          .left-column.block__home-nav
            +main-nav
          .right-column.block__mast-image
            img(src="~/assets/images/home-silhouette.jpg")
          .block__header-text
            h1.header Jacob Cook
          .mobile-only.block__home-nav
            +main-nav
    .section.section__about
      #about.section-content
        .container
          .block__about-text
            h1.header Hello.
            p I'm a Montr√©al-based software engineer (currently with #[a(href="https://busbud.com") Busbud]), maker and open source contributor. My mission is to help people with technology and connect with them through media and projects like #[a(href="https://slowne.ws") slowne.ws]. Aside from that I'm interested in entrepreneurship, photography, music, travel and environmental issues.
    .section.section__footer
      #contact.section-content
        .container
          h1.header Get in touch.
          p
            a.email-link(href="mailto:hello@jacobcook.net") hello@jacobcook.net
          .block__home-nav
            .nav-item
              a(href="https://github.com/peakwinter") GitHub
            .nav-item
              a(href="https://instagram.com/peakwinter") Instagram
            .nav-item
              a(href="https://linkedin.com/in/peakwinter") LinkedIn
            .nav-item
              a(rel="me" href="https://mastodon.d14n.club/@peakwinter") Mastodon
            .nav-item
              a(href="/files/cv.pdf") CV
          .block__home-nav
            .nav-item
              a(href="/files/gpg.asc") GPG
